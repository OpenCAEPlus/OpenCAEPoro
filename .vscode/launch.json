    "version": "v0.3.0",
    "configurations": [
        // SPE1a on mac computer
        {
            "name": "(lldb) Launch SPE1a",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/testOpenCAEPoro",
            "args": [
                "examples/spe1a/spe1a.data"
            ],
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "lldb"
        },
        // SPE5 on mac computer
        {
            "name": "(lldb) Launch SPE5",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/testOpenCAEPoro",
            "args": [
                "examples/spe5/spe5.data"
            ],
            "environment": [
                {
                    "name": "config",
                    "value": "Debug"
                }
            ],
            "stopAtEntry": false,
            "externalConsole": false,
            "MIMode": "lldb"
        },
    ]
}